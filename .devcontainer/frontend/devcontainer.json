{
  "name": "frontend-senior-dev",
  "initializeCommand": "bash ops.sh init",
  "postCreateCommand": "bash .devcontainer/frontend/post-create.sh",
  "postAttachCommand": "bash .devcontainer/frontend/post-attach.sh",
  "dockerComposeFile": "../../docker-compose.yml",
  "service": "frontend-dev",
  "runServices": ["frontend-dev"],
  "shutdownAction": "none",
  "workspaceFolder": "/workspaces/senior-project",
  "forwardPorts": [3000, 8080],
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/senior/.ssh,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "NODE_ENV": "development",
    "GIT_EDITOR": "code --wait"
  },
  "customizations": {
    "vscode": {
      "settings": {
        // https://github.com/ryanoasis/nerd-fonts/releases/download/v3.3.0/Hermit.zip
        "editor.fontFamily": "Hurmit Nerd Font",
        "editor.fontSize": 12,
        "terminal.integrated.fontFamily": "Hurmit Nerd Font",
        "terminal.integrated.fontSize": 12,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "workbench.colorTheme": "Best Themes - Github Black",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.rulers": [120]
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "files.exclude": {
          ".db-mongodb": true
        },
        "terminal.integrated.cwd": "${workspaceFolder}/frontend",
        "github.codespaces.devcontainerChangedNotificationStyle": "none",
        "editor.renderWhitespace": "all",
        "code-eol.newlineCharacter": "¬",
        "code-eol.returnCharacter": "¤",
        "code-eol.crlfCharacter": "¤¬"
      },
      "extensions": [
        "chekweitan.compare-view",
        "eriklynd.json-tools",
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "mechatroner.rainbow-csv",
        "medo64.render-crlf",
        "ms-azuretools.vscode-containers",
        "tamasfe.even-better-toml",
        "bradlc.vscode-tailwindcss",
        "usernamehw.errorlens",
        "lakshits11.best-themes-redefined"
      ]
    }
  }
}
